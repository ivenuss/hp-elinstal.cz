---
interface Props {
  icon: any;
  title: string;
  items: string[];
}

const { icon: Icon, title, items } = Astro.props;
---

<div class="flex gap-x-3">
  <div class="grid size-8 flex-none place-items-center rounded-md bg-primary">
    <Icon class="size-5 text-white" />
  </div>
  <div class="flex flex-col gap-y-1.5">
    <h3 class="text-base font-medium">{title}</h3>
    <ul
      role="list"
      class="flex list-disc flex-col gap-y-1 pl-6 marker:text-primary"
    >
      {items.map((item) => <li class="text-sm">{item}</li>)}
    </ul>
  </div>
</div>
